<div class="row justify-content-lg-center g-3">
    <h1><%= title  %> Contact</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="FullName">FullName</span>
            <input id="FullName" type="text" class="form-control" placeholder="Full Name" aria-label="Name" aria-describedby="Item Name" name ="FullName" value="<%= item.FullName %>" required>
          </div>
        
          <div class="input-group mb-3">
            <span class="input-group-text" id="EmailAddress">Email Address</span>
            <input id="EmailAddress" type="text" class="form-control" placeholder="Email Address" aria-label="Email" aria-describedby="Item Email" name ="EmailAddress" value="<%= item.EmailAddress %>" required>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="ContactNumber">Contact Number</span>
            <input id="ContactNumber" type="text" class="form-control" placeholder="Contact Number" aria-label="ContactNumber" aria-describedby="Item ContactNumber" name ="ContactNumber" value="<%= item.ContactNumber %>" required>
          </div>

          <button type="submit" class="btn btn-primary" id="editButton"><i class="fas fa-edit fa-lg">Edit</i></button>

    </form>
</div>